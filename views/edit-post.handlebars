<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <div class="container center">
    <h2>
      Edit Issue
    </h2>
    <form class="edit-post-form">
      <div>
        <span>({{format_url post.post_url}})</span><br>
        <input class="login-box form-control-lg" name="post-title" type="text" value="{{post.title}}" /><br>

        <button class="btn btn-primary" type="submit">Save Post</button>
        <button class="btn btn-primary delete-post-btn" type="button">Delete Post</button>
      </div>
      <div>
        {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
        |
        <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
      </div>

    </form>
  </div>
</article>

<form class="comment-form center">
  <div class="form-floating">
    <textarea rows="4" placeholder="Leave a comment here"name="comment-body" style="width:50%"></textarea>
     
  </div>

  <div>
    <button class="btn btn-primary" type="submit">Add Comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>